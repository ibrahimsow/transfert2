{% extends 'index.html.twig' %} 

{% block content %}

<div class="envoyer container"> 
    <form id="formulaire"  action="/transfert/upload/uploadfile" method="POST" enctype="multipart/form-data">
        <div class="infos"> 

            <div id="email_div"> 
                <label for="email_expediteur">
                    Votre email
                </label>
                <div id="email_error"></div>
                <input id="email" type="email" name="email_expediteur" class="textInput">
            </div>

            <div id="email_div"> 
                <label for="email_destinataire">
                    Email du Destinataire
                </label>
                <div id="email_error"></div>
                <input id="email" type="email" name="email_destinataire" class="textInput">
            </div>

            <div id="message_div ">  
                <label for="message">
                    Ecrivez votre message
                </label>
                <div id="message_error"></div>
                <textarea id="message" name="message" class="messageInput"  rows=4 cols=40> </textarea>   
            </div>

        </div>  

        <div class="uploader">

            <label for="fichier" class="label-file">
                <i class="far fa-plus-square"></i> 
                Ajoutez vos Fichiers 
            </label>
            <input type="file" name="fichier[]" class="input-file" id="fichier"  value="100000" multiple>
            <ul id="listing">
                
            </ul>

        </div>

        <div class="d-flex justify-content-center align-items-center">
            <button id="button" type="submit" name="envoyer" value="Upload File Now" class="btn ">Envoyer</button>
        </div>
    </form> 
</div>

{%  endblock %}
